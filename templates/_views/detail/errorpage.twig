{% extends "_views/detail/default" %}

{% block view_article %}
  <div class="bg-warmGray-50 pb-32 lg:pb-56">
    {% embed "_components/container" with {
      entry: entry,
    } only %}
      {% block content %}
        <div class="max-w-md lg:mx-auto min-h-[40vh] flex flex-col justify-center">
          {# Title #}
          <h1 class="headline--1">{{ entry.title }}</h1>

          {# CTA #}
          <a href="{{ siteUrl }}" class="mt-6 headline--6 uppercase flex items-center space-x-3 sm:space-x-5 transition-transform duration-300 text-red-600 hover:text-red-400">
            {{ svg("@root/assets/img/svg-sprite/arrow-opaque.svg")|attr({ class: 'w-6 h-6 sm:w-7 sm:h-7 flex-shrink-0 transform rotate-180' }) }}
            <span>Startseite</span>
          </a>
        </div>
      {% endblock %}
    {% endembed %}
  </div>
{% endblock %}

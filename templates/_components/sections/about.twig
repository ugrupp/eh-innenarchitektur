{% set defaults = {
  lead: "",
  body: "",
  foot: "",
  image1: null,
  image2: null,
  image3: null,
} %}

{% set options = options is defined ? defaults|merge(options) : defaults %}

<section id="ueber-mich" class="about -mt-36">
  {% embed "_components/container" with {
    topOptions: options,
  } only %}
    {% block content %}
      <div class="grid grid-cols-12">
        {# Image 1 #}
        {% set image1 = tag("div", {
          class: [
            "max-w-[400px] col-start-1 col-span-10",
            "sm:col-start-1 sm:col-span-5",
            "lg:row-start-1 lg:col-start-1 lg:col-span-4",
          ],
        })%}
        {% set image1Content %}
          {% if topOptions.image1|length %}
            {% include "_components/image" with {
              options: {
                image: topOptions.image1,
                wrapperClasses: ["bg-gray-100", "rounded-xl"]
              }
            } %}
          {% endif %}
        {% endset %}
        {{ image1|append(image1Content) }}


        {# Lead #}
        {% set lead = tag("div", {
          class: [
            "col-start-3 col-span-10 my-20",
            "md:col-start-3 md:col-span-7",
            "lg:row-start-2 lg:col-start-2 lg:col-span-5 lg:my-28",
            "xl:col-start-2 xl:col-span-4"
          ],
        })%}
        {% set leadContent %}
          {% embed "_components/text" with {
            topOptions: topOptions
          } only %}
            {% block content topOptions.lead %}
          {% endembed %}
        {% endset %}
        {{ lead|append(leadContent) }}


        {# Body #}
        {% set body = tag("div", {
          class: [
            "col-start-1 col-span-10",
            "md:col-start-1 md:col-span-7",
            "lg:row-start-3 lg:col-start-1 lg:col-span-5",
            "xl:col-start-1 xl:col-span-4"
          ],
        })%}
        {% set bodyContent %}
          {% embed "_components/text" with {
            topOptions: topOptions
          } only %}
            {% block content topOptions.body %}
          {% endembed %}
        {% endset %}
        {{ body|append(bodyContent) }}


        {# Foot #}
        {% set foot = tag("div", {
          class: [
            "col-start-3 col-span-10 mt-8",
            "md:col-start-3 md:col-span-7",
            "lg:row-start-4 lg:col-start-2 lg:col-span-5",
            "xl:col-start-2 xl:col-span-4"
          ],
        })%}
        {% set footContent %}
          {% embed "_components/text" with {
            topOptions: topOptions,
            options: {
              classes: ["text-red-600 text-right"]
            }
          } only %}
            {% block content topOptions.foot %}
          {% endembed %}
        {% endset %}
        {{ foot|append(footContent) }}


        {# Image 2 #}
        {% set image2 = tag("div", {
          class: [
            "col-start-3 col-span-10 mt-20",
            "sm:col-start-3 sm:col-span-5",
            "lg:row-start-1 lg:row-span-3 lg:col-start-8 lg:col-span-4 lg:mt-36",
            "xl:col-start-9 xl:col-span-4",
          ],
        })%}
        {% set image2Content %}
          {% if topOptions.image2|length %}
            {% include "_components/image" with {
              options: {
                image: topOptions.image2,
                wrapperClasses: ["bg-gray-100", "rounded-xl"]
              }
            } %}
          {% endif %}
        {% endset %}
        {{ image2|append(image2Content) }}


        {# Image 3 #}
        {% set image3 = tag("div", {
          class: [
            "max-w-[400px] col-start-1 col-span-10 mt-10",
            "sm:col-start-1 sm:col-span-5",
            "lg:row-start-3 lg:row-span-2 lg:col-start-7 lg:col-span-4 lg:mt-0 self-center",
            "xl:col-start-8 xl:col-span-4",
          ],
        })%}
        {% set image3Content %}
          {% if topOptions.image3|length %}
            {% include "_components/image" with {
              options: {
                image: topOptions.image3,
                wrapperClasses: ["bg-gray-100", "rounded-xl"]
              }
            } %}
          {% endif %}
        {% endset %}
        {{ image3|append(image3Content) }}
      </div>
    {% endblock %}
  {% endembed %}
<section>
